<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/inter_card_half_spacing"
    android:layout_marginBottom="@dimen/inter_card_half_spacing"
    app:cardBackgroundColor="#FFF3E0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding"
        tools:background="#FFB74D">

        <ImageView
            android:id="@+id/recipe_search_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/recipe_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="@dimen/font_size_header"
            android:textColor="#9E9E9E"
            />

        <TextView
            android:id="@+id/more_search_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="@dimen/font_size_info"
            android:textColor="#9E9E9E"
            android:text="More info: "
            />

        <TextView
            android:id="@+id/src_search_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_info"
            android:textColor="@color/colorPrimary"
            android:autoLink="web"
            android:linksClickable="true"/>

        />




    </LinearLayout>
</android.support.v7.widget.CardView>